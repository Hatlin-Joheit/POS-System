<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_pos">

    <fragment
        android:id="@+id/navigation_pos"
        android:name="com.example.possystem.ui.pos.POSFragment"
        android:label="POS"
        tools:layout="@layout/fragment_pos" />

    <fragment
        android:id="@+id/navigation_supplies"
        android:name="com.example.possystem.ui.supplies.SuppliesFragment"
        android:label="Supplies"
        tools:layout="@layout/fragment_supplies" />

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.possystem.ui.statistics.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.possystem.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
